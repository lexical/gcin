include config.mak

debian:
	cp -a debian-pkg debian
ifeq ($(USE_ANTHY),N)
	cd ./debian; \
	sed -e '/^Package: gcin-anthy/,/anthy in gcin.$$/d' control > control.tmp; \
	mv control.tmp control; \
	rm -f gcin-anthy.install
endif
ifeq ($(GTK3_IM),N)
	cd ./debian; \
	sed -e '/^Package: gcin-gtk3-immodule/,/ for gcin.$$/d' control > control.tmp; \
	mv control.tmp control; \
	rm -f gcin-gtk3-immodule.install
endif
ifeq ($(QT5_IM),N)
	cd ./debian; \
	sed -e '/^Package: gcin-qt5-immodule/,/ for gcin.$$/d' control > control.tmp; \
	mv control.tmp control; \
	rm -f gcin-qt5-immodule.install
endif
