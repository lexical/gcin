#!/bin/bash

if [ -z "$1" -o -z "$2" ]; then
  echo "please specify gcin_table_dir gcin_bin_dir"
  exit 0
fi

cd

if [ ! -d .gcin ]; then
  mkdir .gcin
fi

if [ ! -d .gcin/config ]; then
  mkdir .gcin/config
fi

cd $1 || echo "$1 is not a gcin table dir"

for i in pho.tab2 pho-huge.tab2 s-pho.tab2 s-pho-huge.tab2 tsin* s-tsin* en-american* symbol-table phrase.table
do
  if [ ! -f ~/.gcin/$i ]; then
     cp $i ~/.gcin
  fi
done


cd ~/.gcin

diff1=''
diff tsin-1.src $1/tsin-1.src >& /dev/null
if [ $? != 0 ]; then
diff1='Y'
fi

if [ ! -f tsin-1.src -o -n "$diff1" ]; then
  echo "merge tsin-1.src"
  cp $1/tsin-1.src .
  $2/tsd2a32 tsin32 > tmpfile
  cat tsin-1.src >> tmpfile
  $2/tsa2d32 tmpfile
fi
